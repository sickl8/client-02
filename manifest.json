{
	"name": "Gota.io Feeder",
	"description": "Enjoy!",
	"version": "1.0",
	"manifest_version": 2,
	"background": {
		"scripts": ["background.js", "popup.js"]
	},
	"permissions": [
		"declarativeContent",
		"storage",
		"activeTab",
		"webRequestBlocking",
		"webRequest",
		"http://*/",
		"https://*/",
		"tabs"
	],
	"browser_action": {
		"default_popup" : "popup.html",
		"default_icon": {
			"16": "images/gota_16.png",
			"32": "images/gota_32.png",
			"48": "images/gota_48.png",
			"128": "images/gota_128.png"
		}
	},
	"icons": {
		"16": "/images/gota_16.png",
		"32": "/images/gota_32.png",
		"48": "/images/gota_48.png",
		"128": "/images/gota_128.png"
	},
	"web_accessible_resources": [ "replaced.js", "rp_b3.3.7.1.js", "rp_m3.3.7.1.js" ],
	"externally_connectable": {
		"matches": ["http://127.0.0.1:*/*", "https://127.0.0.1:*/*", "https://gota.io/*"]
	}
}